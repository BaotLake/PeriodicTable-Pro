.spectral{
  margin:1px 10px;
  position: relative;
  padding:15px;
  background-color:rgb(var(--back-color-2));
  color:rgb(var(--fore-color-1));
  height:110px;
  /*border: 1px solid;
  border-color:#555;*/
  /*border-color: #888 transparent transparent transparent;*/
}
.s_i{
  position: relative;
  bottom:0;
  height: 45px;
  width:100%;
}
.s_t{
  position: relative;
