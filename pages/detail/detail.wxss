.page-bg{
  background-color:rgb(var(--back-color-1));
}
.detail-page{
  position:relative;
  top: 0;
  width:100vw;
  min-height:100vh;
  color: rgb(var(--fore-color-1));
}

.detailimageblock{
  position:relative;
  display:block;
  width:100%;
  height:75vw;
  font-size:4.5vw;
  color:rgb(var(--light-color));
}
.detailimage{
  display:flex;
  width:100%;
  height:100%;
  /**height:566rpx;*/
}
.imagegradient{
  position:absolute;
  top:0%;
  left:0rpx;
  width:100%;
  height:100%;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%,from(transparent), to(#000));
  opacity: 0.6;
}
.d_classtag{
  position:absolute;
  top:52%;
  left:-0.32em;
  display:block;
  width:25%;
