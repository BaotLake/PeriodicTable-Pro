/* pages/search/search.wxss */
@import "../data/template.wxss";

.searchPage{
  position:absolute;
  width:750rpx;
  height:100vh;
  background-color:#223;
}
.searchBoxContent{
  position:relative;
  top:200rpx;
  width:60%;
  height:80rpx;
  margin:10rpx auto;
  border-radius:10rpx;
  border:1rpx solid #aaa;
}
.searchInput{
  position:relative;
  left:60rpx;
  width:80%;
  height:100%;
  color:#fff;
}
.searchIcon{
  position:absolute;
  top:18rpx;
  left:12rpx;
}
.searchClearContent{
  position:absolute;
  top:0;
  right:0;
  width:80rpx;
  height:80rpx;
}
.searchClear{
  position:relative;
  top:18rpx;
  left:18rpx;
}
.hoverClear{
  opacity:0.3;
}
.searchLoading{
  position:relative;
  width:60rpx;
  height:60rpx;
  left:44%;
  top:8rpx;
}
.resultContent{
  position:relative;
  top:300rpx;
  width:100%;
  height:60vh;
  background-color:#223;
}
.elemLineContent{
  width:750rpx;
}
.elemLine{
  display:flex;
  padding:30rpx;
  margin:0 auto;
}
.CFCalculatorContent{
  position:relative;
  width:750rpx;
}
.CFbd{
  position:relative;
}
.CFCDeclare{
  position:relative;
  width:80%;
  height:60rpx;
  font-size:26rpx;
  text-align:right;
  color:#888;
  margin:0 auto;
}


/*template*/

.CFCalculator{
  display:flex;
  position:relative;
  width:750rpx;
  height:160rpx;
  padding:3% 5%;
}
.CFCalculatorName{
  position:relative;
  width:30%;
  height:100%;
  color:#fff;
  text-align:center;
  line-height:60rpx;
  background-color:#66c;
  border-bottom:1px solid #66c;
  border-top:1px solid #66c;
}
.CFCF{
  position:relative;
  width:30%;
  height:100%;
  text-align:center;
  line-height:66rpx;
  border-bottom:1px solid #66c;
  border-top:1px solid #66c;
}
.CFCFName{
  font-size:26rpx;
  color:#fff;
}
.CFResult{
  position:relative;
  width:30%;
  height:100%;
  text-align:center;
  background-color:#66c;
  line-height:66rpx;
  border-bottom:1px solid #66c;
  border-top:1px solid #66c;
}
.CFResultName{
  font-size:26rpx;
  color:#fff;
}
.CFResultValue{
  font-size:36rpx;
  color:#fff;
}
