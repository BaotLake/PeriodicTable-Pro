/*原子结构图*/
/*Canvas画布*/
.atomStructure{
  position:relative;
  display:block;
  margin:1px 10px;
  padding:15px 30px 10px 30px;
  background-color:rgb(var(--back-color-2));
  border-radius:2px;
}
.eleShellTitle{
  display:block;
  height:30px;
  font-size:18px;
}
.canvas{
  position:relative;
  width:260px;
  left:calc((100% - 260px) / 2);
  /*background-color:#202025;*/
  transform-origin:center;
  /* animation: 3s linear 0s infinite rotate;*/
}
.eleShell{
  display:block;
  height:30px;
  line-height:30px;
  font-size:16px;
}

.enterExplain{
  position:relative;
  top:-25px;
  left:calc(100vw - 60px);
  height:50px;
  line-height:50px;
  width:50px;
  text-align:center;
  border-radius:50%;
  background-color:#333;
  color:#fefefe;
}

@keyframes rotate{
  from{
    transform:rotate(0deg);
  }

  to{
    transform: rotate(360deg);
  }
}

@media (orientation:landscape){
/*@media (max-height:100vw){*/
  /**横屏 两栏*/
  .detail-page{
    width:50vw;
  }
  .spectral{
    /**原子光谱*/
    position:absolute;
    left:50vw;
    visibility:visible;
    top:10px;
    right:0;
    width:calc(50vw - 50px);
  }
  .atomStructure{
    /**原子层结构*/
    position:absolute;
    left:50vw;
    visibility:visible;
    top:calc(140px + 20px);
    right:0;
    width:calc(50vw - 80px);
  }
  .detailimageblock{
    /**position:absolute; */
    height:calc(0.75 * 50vw);
    font-size:2.25vw;
    
    top:0;
  }

  
  @media (min-width:10){
    .enterExplain_a{
    background-color:#f00;
    }

  }
}
@media (orientation:portrait){
/*@media (min-height:100vw){*/
  /**竖屏模式*/
  @media (min-width:10cm) and (max-width:12cm){
    .detailimageblock_del{
      font-size:16px;
    }
  }
}

