@import "../../template/template.wxss";
.detail-page-bg{
  position:fixed;
  top:0;
  left:0;
  width:100vw;
  height:100vh;
  background-color:#161616;
}
.detailpage{
  overflow-x:hidden;
  position:absolute;
  top: 0;
  width:100vw;
  color: #fff;
}



.detailimageblock{
  position:relative;
  display:block;
  width:100%;
  height:75vw;
  font-size:4.5vw;
}
.detailimage{
  display:flex;
  width:100%;
  height:100%;
  /**height:566rpx;*/
}
.imagegradient{
  position:absolute;
  top:0%;
  left:0rpx;
  width:100%;
  height:100%;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%,from(transparent), to(#000));
  opacity: 0.6;
}
.d_classtag{
  position:absolute;
  top:52%;
  left:-0.32em;
  display:block;
  width:25%;
  height:10%;
  line-height:1.75em;
  border-radius: 0.32em;
  font-size: 0.9em;
  text-align: center;
  }
.elemIntro{
  position:absolute;
  bottom:0;
  left:0;
  width:80%;
  height:38%;
  padding: 0 10%;
  display:flex;
  flex-wrap:wrap;
}
.d_symbol{
  position:relative;
  top:5%;
  height:70%;
  font-size: 3.4em;
  line-height:1.3em;
  font-weight:500;
  text-align:center;
  padding:0 0.15em;
  color: #fff;
}
.subBox{
  position:relative;
  top:5%;
  height:70%;
  display:block;
}
.d_name{
  position:relative;
  height:40%;
  margin:10% 0 0 0;
  font-size: 1em;
  line-height:1.85em;
  font-weight:500;
  color:#fff;
  display:inline-block;

}
.d_ordinal{
  position:relative;
  height:40%;
  margin:10% 0 0 0;
  line-height:1.85em;
  font-size: 1em;
  padding:0 0.3125em;
  display:inline-block;
}
.d_enname{
  position:relative;
  display:block;
  font-size: 1em;
  line-height:1.85em;
  height:45%;
  margin: 0 0 5% 0;
}
.d_atomic{
  position:relative;
  height:20%;
  top:-0.31em;
  padding:0 0.65em;
  font-size:0.81em;
  display:block;
  width:100%;
}
.wikipedia-icon{
  position:absolute;
  height:30px;
  width:30px;
  bottom:10px;
  right:20px;
}

/*template*/
.headline{
  margin:10px 10px 0;
  padding:15px;
  background-color:#202025;
  /*border: 1px solid;
  border-color: #888;*/
  /*border-color: #888 transparent transparent transparent;*/
  display:flex;
  border-radius:2px;
}
.fold-icon{
  width:30px;
  height:30px;
  margin:0 10px 0 0;
  border-radius:50%;
  transition:height,transform 1s;
}
.fold-icon:hover{
  background-color:#aaa;
  opacity:0.8;
}
.p_h_t{
  position: relative; 
  line-height:30px;
  font-size: 18px;
  flex: 1;
}
.icon{
  position: relative;
  width:30px;
  height:30px;
}
.infobar-content{
  overflow:hidden;
  position:relative;
  height:auto;
  transition:all 0.5s;
}
.infobar-fold{
  height:0;
  visibility:collapse;
  left:100000px;
  /**
  transition:transform 1s;
  -moz-transition:transform 1s;
  -webkit-transition: transform 1s;
  */
}
.infobar{
 margin:2rpx 10px;
 padding:10px 30px 8px 30px;
 background-color:#202025;
 /*border: 1px solid;
 border-color:#555;*/
 /*border-color: #555 transparent transparent transparent; */
 line-height:20px;
 border-radius:2px;
