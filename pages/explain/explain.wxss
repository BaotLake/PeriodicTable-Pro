/* pages/detail/explain/explain.wxss */
@import "../../template/template.wxss";
@import "../../common.wxss";

.explain-page{
  padding-top:80px;
}
.DEBlock{
  position:relative;
  width:100%;
  height:100%;

}
.DE{
  position:relative;
  padding:120rpx 38rpx;
}
.indexMoveArea{
  position:fixed;
  top:0;
  right:-350rpx;
  width:750rpx;
  height:1px;
}
.indexMoveView{
  position:relative;
  width:400rpx;
  height:100vh;
}
.indexesBlock{
  position:absolute;
  top:0;
  right:0;
  width:300rpx;
  height:100%;
  background-color:#eee;
  padding:0 25rpx;
  box-shadow:0 0 3px #aaa;
  opacity:0.96;
}
.DEIndexes{
  position:relative;
  padding:100rpx 0;
}
.indexBox{
  width:80%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  margin:auto;
}
.tapIndexBox{
  opacity:0.3;
}

