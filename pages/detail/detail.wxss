}
.navigation_back{
  width:100%;
  height:100%;
}

.detail-list-bd{
  padding:0rpx 30rpx 40rpx;
}

.noneElem{
  position:relative;
  height:100vh;
  background:-webkit-gradient(linear, 0% 0%, 0% 100%,from(#fff), to(#eeeeff));
}
.noneElemText{
  padding:60rpx;
  color:#000;
  font-size:56rpx;
}

