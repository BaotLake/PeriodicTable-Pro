/* pages/settings/settings.wxss */
@import "../../template/template.wxss";
@import '../../theme.wxss';
@import '../../common.wxss';


.settings-page{
  position:relative;
  top:0;
  left:0;
  width:100%;
  box-sizing:border-box;
  padding-left:10px;
  padding-right:10px;
  display:flex;
  flex-wrap:wrap;
  background-color:rgb(var(--back-color-2));
  min-height:100vh;
  
}

.item-bar{
  width:100%;
  padding:0 15px;
  margin:2px 5px 0 5px;
  height:60px;
  border-radius:4px;
  background-color:#fff;
  color:#555;
  display:flex;
  align-items:center;
  box-sizing:border-box;
}
.item-bar-title{
  width:calc(100% - 90px - 30px);
  padding-left:30px;
  height:100%;
  line-height:60px;
  font-size:1em;
}
.item-bar-switech{

}

.img-checkbox-wrapper{
  position:relative;
  min-width:6em;
  min-height:4em;
  display:block;
  box-sizing:border-box;
  padding:5px;
}
.img-checkbox{
  position:relative;
  border-radius:3px;
  width:100%;
  height:100%;
  overflow:hidden;
}
.img-checkbox-img{
  position:absolute;
  width:100%;
  height:100%;
}
.img-checkbox-check{
  position:absolute;
  width:100%;
  height:100%;
  box-sizing:border-box;
  padding:10% 26.6%;
}

.setting-lable{
  margin-left:auto;
  margin-right:auto;
  max-width:25rem;
  background-color:rgb(var(--back-color-1));
  box-shadow:2px 2px 5px rgba(0,0,0,0.1);
  padding: 15px 0 20px 0;
  border-radius:3px;
  color:rgb(var(--fore-color-1));
}
.setting-lable-title{
  text-align:center;
  padding:5px 0;
}
.setting-lable-content-warpper{
  display:flex;
  flex-wrap:wrap;
  justify-content:space-around;
}

