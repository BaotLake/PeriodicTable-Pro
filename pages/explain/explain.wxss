/** template 
*/



.tem-illustration{
  width:61.8%;
  margin-left:auto;
  margin-right:auto;
}
.tem-illustration-image{
  width:100%;
}

.tem-section-title{
  width:calc(100% - 30px);
  height:80rpx;
  border-bottom: 1px solid #aaa;
  margin:0 15px;
  line-height:80rpx;
  color:#555;
  font-size:42rpx;
}
.tem-section-title-hover{
  background-color:#eee;
}
.tem-section-title-icon{
  display:inline-block;
  width:60rpx;
  height:60rpx;
  margin:10rpx 0;
}
.tem-section-title-text{
  display:inline-flex;
  vertical-align:top;
}
.tem-section-flod-icon{
  display:inline-block;
  width:60rpx;
  height:60rpx;
  margin:10rpx 0;
  position:absolute;
  right:15px;
}
.tem-section-content{
  padding:5px 15px 0 15px;
}

.tem-text{
  text-indent:60rpx;
  font-size:28rpx;
  line-height:60rpx;
  color:#555;
  padding:0 40rpx;
}
.tem-h1{
  font-size:46rpx;
  padding: 0 40rpx;
}
.tem-h3{
  font-size:36rpx;
  padding: 0 40rpx;
}

.tem-note{
  text-indent:60rpx;
  font-size:32rpx;
  line-height:32rpx;
  color:#888;
  background-color:#eaeaea;
  margin:10rpx 40rpx;
  padding: 10rpx;
  border-radius:6rpx;
}

.tem-link{
  color:#55f;
  font-size:32rpx;
  line-height:60rpx;
}

.tem-image-fullwidth{
  width:100%;
}
.tem-image-inline{
  height:60rpx;
  display:inline-block;
  vertical-align:bottom;  
}

/*段落样式*/
.tem-p{
  font-size:14pt;
  line-height:40px;
  padding:10px 15px;
}

/*模拟一些HTML的标签样式，例如sup、sub、等*/

text{
  font-size:100%;
}
sup{
  font-size:50%;
  vertical-align:super;
}
.sup{
  font-size:50%;
  vertical-align:super;
}
sub{
  font-size:50%;
  vertical-align:sub;
}
.sub{
  font-size:50%;
  vertical-align:sub;
}
.h1{
  font-size:200%;
}
.h2{
  font-size:160%;
}
.h3{
  font-size:130%;
}