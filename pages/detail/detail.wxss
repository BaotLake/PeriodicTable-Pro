.detailpage{
  overflow-x:hidden;
  position:absolute;
  top: 38rpx;
  width:750rpx;
  background-color:#161616;
  color: #fff;
}
.statusbar{
  position: fixed;
  width:750rpx;
  height:38rpx;
  background-color: #000;
  opacity:0.8;
}
.navigationbar{
  position:fixed;
  display:block;
  top: 58rpx;
  left:20rpx;
  width: 66rpx;
  height:66rpx;
  border: 1rpx solid #aaa;
  border-radius:20rpx;
  color:#fff;
