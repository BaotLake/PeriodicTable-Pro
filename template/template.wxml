<!--元素框 element box-->
<template name="elembox">
  <!--data: e_list;bottomdata;border_color;borderleft_color;bordertop_color;-->
  <block wx:if="{{e_list[0]}}">
    <!--元素数据不为空 显示元素信息-->
    <view class="elembox" hover-class="tapbox" data-tapordinal="{{e_list[0]}}" bindtouchstart="bindTouchStart" bindtouchend="bindTouchEnd" bindtap="openDetailPage" bindlongpress="bindlongpress" style="{{style}}">
      <view class="ordinal" style="background: -webkit-gradient(linear, 100% 0%, 0% 0%,from(transparent), to({{signColor[e_list[4]]}}));">{{e_list[0]}}</view>
      <view class="symbol">{{e_list[1]}}</view>
      <view class="name">{{e_list[2]}}</view>
      <view wx:if="{{!bottomdata}}" class="atomic">{{e_list[3]}}</view>
      <view wx:else class="atomic">{{bottomdata}}</view>
      <!--<view class="colorsign" style="border-color: transparent {{e_list[4]}} {{e_list[4]}} transparent"></view>-->
    </view>
  </block>
  <view wx:else class="box">
    <!--元素信息为空，显示空白框-->
  </view>
</template>



