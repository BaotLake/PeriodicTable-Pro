<!--Detail Page-->
<import src="../data/template.wxml"/>
<view class="detailpage">
  <block wx:if="{{elem}}">
    <template is="detailimage" data="{{elem,signColor}}"></template>
  </block>
  <view wx:if="{{elem[0]}}" class="detail-list-bd">
    <block wx:for="{{elem[0]}}" wx:key="{{code}}">
      <template wx:if="{{item}}" is="subjectblock" data="{{elem,item,index,property}}"/>
    </block>
    <template is="share" data="{{buttonStyle:'color:#fff;border-color:#888;',style:'padding:0;'}}" />
  </view>
  <view wx:else class="noneElem" style="height:100vh;">
    <template is="share" data="{{buttonStyle:'color:#000;',style:'padding:30rpx;position:relative;top:200rpx;'}}" />
  </view>
</view>

<template is="statusBar" data="{{bd_Color:elem[1][7]}}"></template>
<template is="navigationBar-Back" data="{{rootPath,style:'background-color:#aaa;opacity:0.5;'}}"></template>

