  color:white;
  }
.elemIntro{
  position:absolute;
  bottom:0;
  left:0;
  width:80%;
  height:38%;
  padding: 0 10%;
  display:flex;
  flex-wrap:wrap;
}
.d_symbol{
  position:relative;
  top:5%;
  height:70%;
  font-size: 3.4em;
  line-height:1.3em;
  font-weight:500;
  text-align:center;
  padding:0 0.15em;
}
.subBox{
  position:relative;
  top:5%;
  height:70%;
  display:block;
}
.d_name{
  position:relative;
  height:40%;
  margin:10% 0 0 0;
  font-size: 1em;
  line-height:1.85em;
  font-weight:500;
  display:inline-block;

}
.d_ordinal{
  position:relative;
  height:40%;
  margin:10% 0 0 0;
  line-height:1.85em;
  font-size: 1em;
  padding:0 0.3125em;
  display:inline-block;
}
.d_enname{
  position:relative;
  display:block;
  font-size: 1em;
  line-height:1.85em;
  height:45%;
  margin: 0 0 5% 0;
}
.d_atomic{
  position:relative;
  height:20%;
  top:-0.31em;
  padding:0 0.65em;
  font-size:0.81em;
  display:block;
  width:100%;
}

.d-view-icon{
  position:absolute;
  bottom:1em;
  right:1em;
  width:1.2em;
  height:1.2em;
}

.wikipedia-icon{
  position:absolute;
  height:30px;
  width:30px;
  bottom:10px;
  right:20px;
}

/*template*/
.headline{
  margin:10px 10px 0;
  padding:10px;
  /*border: 1px solid;
  border-color: #888;*/
  /*border-color: #888 transparent transparent transparent;*/
  display:flex;
  align-items:center;
  border-radius:2px;
  background-color:rgb(var(--back-color-2));
}

.detail-back::before{
  top:75%;
  transform:rotate(45deg) !important;
}
.detail-back::after{
  top:75%;
  transform:rotate(-45deg) !important;
}

.fold-icon{
  position:relative;
  width:20px;
  height:20px;
  margin:0 10px 0 0;
  border-radius:50%;
  box-sizing:border-box;
}

.fold::before{
  top:75%  !important;
  transform:rotate(45deg) !important;
}
.fold::after{
  top:75%  !important;
  transform:rotate(-45deg)  !important;
}

.p_h_t{
  position: relative; 
  line-height:30px;
  font-size: 18px;
  flex: 1;
}
.headline-icon{
  width:20px;
