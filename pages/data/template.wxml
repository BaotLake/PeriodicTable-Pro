<template name="elembox">
  <!--data: e_list;bottomdata;border_color;borderleft_color;bordertop_color;-->
  <block wx:if="{{e_list[0]}}">
    <view class="elembox" hover-class="tapbox" data-tapordinal="{{e_list[0]}}" bindtouchstart="bindTouchStart" bindtouchend="bindTouchEnd" bindtap="openDetailPage" bindlongpress="selectBottomData" style="{{style}}">
      <text class="ordinal" style="background: -webkit-gradient(linear, 100% 0%, 0% 0%,from(transparent), to({{signColor[e_list[4]]}}));">{{e_list[0]}}</text>
      <text class="symbol">{{e_list[1]}}</text>
      <text class="name">{{e_list[2]}}</text>
      <text wx:if="{{!bottomdata}}" class="atomic">{{e_list[3]}}</text>
      <text wx:else class="atomic">{{bottomdata}}</text>
      <!--<view class="colorsign" style="border-color: transparent {{e_list[4]}} {{e_list[4]}} transparent"></view>-->
    </view>
  </block>
  <view wx:else class="box"></view>
</template>

<template name="detailimage">
  <!--data = ""-->
  <view class="detailimageblock">
    <image wx:if="{{elem[1][0]}}" class="detailimage" src="../data/image/elemimage/{{elem[1][0]}}.jpg" style="background:{{elem[1][7]}}">
    </image>
    <view class="imagegradient"></view>
    <text wx:if="{{elem[1][0]}}" class="d_symbol">{{elem[1][0]}}</text>
    <text wx:if="{{elem[1][1]}}" class="d_name" >{{elem[1][1]}}</text>
    <text wx:if="{{elem[1][2]}}" class="d_enname">{{elem[1][2]}}</text>
    <text wx:if="{{elem[1][3]}}" class="d_classtag" style="background-color:{{elem[1][7]}};">{{elem[1][3]}}</text>
    <text class="d_atomic">{{elem[1][6]}}</text>
    <!--text class="d-ordinal">{{elem[1][4]}}</text-->
  </view>
</template>


<template name="subjectblock">
  <!--DetailPage a kind of Property-->
  <view class="headline-item">
    <view class="headline">
      <text class="p_h_t">{{property[item]}}</text>
      <image class="icon" src="../data/image/icon/{{item}}.png" style=""></image>
    </view>
  </view>
  <block wx:for="{{elem[index+2]}}" wx:key="{{code}}">
    <template wx:if="{{item[0]=='template'}}" is="{{item[1]}}" data="{{symbol:elem[1][0]}}" />
    <view wx:elif="{{item[0]}}" class="infobar">
      <text class="p_i_t">{{item[0]}}</text>
      <text class="p_i_i">{{item[1]}}</text>
    </view>
  </block>
</template>

