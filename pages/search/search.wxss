/* pages/search/search.wxss */
@import "../../template/template.wxss";
@import "../../common.wxss";
@import "../../theme.wxss";

.search-page{
  position:absolute;
  width:100vw;
  background-color:rgb(var(--back-color-1));
  min-height:100vh;
}

.resultContent{
  position:relative;
  width:100%;
  /*background-color:#223;*/
}
.elemLineContent{
  width:100%;
}
.elemLine{
  display:flex;
  padding:1rem;
  margin:0 auto;
  justify-content:space-around;
}
.CFCalculatorContent{
  position:relative;
}

.CFCDeclare{
  position:relative;
  line-height:2.5rem;
  font-size:0.8rem;
  text-align:center;
  color:rgba(var(--fore-color-2),0.6);
  padding:0 10px;
  max-width:100%;
}


/*template*/

.cf-calculator{
  display:flex;
  position:relative;
  width:100%;
  max-width:25rem;
  height:6rem;
  padding:3% 5%;
}
.cf-calculator-name{
  position:relative;
  width:30%;
  height:100%;
  color:#000;
  text-align:center;
  line-height:2rem;
  background-color:#a7a8bd;
  border-bottom:1px solid #a7a8bd;
  border-top:1px solid #a7a8bd;
}
.cf-cf{
  position:relative;
  width:30%;
  height:100%;
  text-align:center;
  line-height:2rem;
  border-bottom:1px solid #a7a8bd;
  border-top:1px solid #a7a8bd;
}
.cf-cf-name{
  font-size:1rem;
  color:#000;
}
.cf-result{
  position:relative;
  width:30%;
  height:100%;
  text-align:center;
  background-color:#a7a8bd;
  line-height:2rem;
  border-bottom:1px solid #a7a8bd;
  border-top:1px solid #a7a8bd;
}
.cf-result-name{
  font-size:1rem;
  color:#000;
}
.cf-result-value{
  font-size:1rem;
  color:#000;
}


/*template: search input box*/
.search-box-content{
  position:relative;
  display:flex;
  align-items: center;
  margin-right:auto;
  margin-left:auto;
  width:calc((100vw - 84rpx - 94pt) *1);
  max-width:12rem;
  height:calc(32px * 1);
  margin:7px 10px 7px 0;
  line-height:1.5rem;
  font-size:1rem;
  border-radius:16px;
  background-color:rgb(var(--light-color));
  border:1px solid rgba(var(--fore-color-2),0.5);
  box-sizing:border-box;
}
.search-input{
  position:relative;
  padding-left:16px;
  width:calc(100% - 48px);
  height:30px;
  color:rgb(var(--dark-color));
}
.search-clear{
  position:relative;
  width:32px;
  height:32px;
  border:solid 8px transparent;
  box-sizing:border-box;
}

.calc-items{
  width:100%;
  height:3rem;
  display:flex;
  text-align:center;
  align-items:center;
  justify-content:center;
  color:rgba(var(--fore-color-1),1);
}
.calc-items-formula{
  max-width:16rem;
  min-width:8rem;
  height:2.5rem;
  line-height:2.5rem;
  background-color:rgba(var(--back-color-2),0.8);
  border-radius:5px;
  margin-right:1.5rem;
}
.clac-items-value{
  max-width:16rem;
  min-width:8rem;
  height:2.5rem;
  line-height:2.5rem;
  background-color:rgba(var(--back-color-2),0.8);
  border-radius:5px;
  margin-left:1.5rem;
}

@media (orientation:landscape){
  .search-box-content{
    margin:auto;
  }
  .navigation-icon{
    position:absolute;
  }
}

@media (min-width:25rem){
  .search-box-content{
    margin:auto;
  }
  .navigation-icon{
    position:absolute;
  }
}